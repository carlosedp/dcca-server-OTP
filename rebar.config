{minimum_otp_vsn, "18"}.

{erl_opts, [
    debug_info,
    {parse_transform, lager_transform},
    {lager_truncation_size, 10485760},
    {i, "include"}
]}.

{deps, [
    {lager, "3.2.1"}
]}.

{plugins, [
    rebar3_diameter_compiler,
    relflow
]}.

{provider_hooks, [
    {pre, [
        {compile, {diameter, compile}},
        {clean, {diameter, clean}}
    ]}
]}.

{relx, [{release, {'dccaserver', "1.0.0"}, [
            lager,
            sasl,
            diameter,
            ocsgateway,
            dccaserver
        ]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true},
                            % {include_erts, false},    %Uncomment after fixed in Windows
                            % {system_libs, false},     %Uncomment after fixed in Windows
                            {include_src, false}]
                    }]
            }]
}.

%% xref checks to run
{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, % exports_not_used, that is a problem with having multiple apps
               deprecated_function_calls, deprecated_functions]}.

{dialyzer, [
            {plt_extra_apps, [kernel, stdlib, sasl, erts, ssl, tools, inets, compiler, diameter]},
            {warnings, [no_improper_lists]}
            %%{base_plt_apps, [atom(), ...]},
            %%{base_plt_location, global | file:filename()},
            %%{base_plt_prefix, string()}
          ]}.
